# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                              controllers.MainController.index(isMobile: Option[String])

POST          /logged-in-user                controllers.SessionController.getLoggedInUser
POST          /login                         controllers.SessionController.login
POST          /logout                        controllers.SessionController.logout

POST          /pw/search                     controllers.PasswordEntryController.searchPasswordEntries
GET           /pw/all                        controllers.PasswordEntryController.all
POST          /pw                            controllers.PasswordEntryController.create
POST          /pw/:id                        controllers.PasswordEntryController.save(id: Int)
DELETE        /pw/:id                        controllers.PasswordEntryController.delete(id: Int)

POST          /user/:id                      controllers.UserController.save(id: Int)
POST          /user                          controllers.UserController.create
GET           /users                         controllers.UserController.getAll
DELETE        /user/:id                      controllers.UserController.delete(id: Int)

GET           /export                        controllers.ImportExportController.exportData(filename: String, format: String)
POST          /import                        controllers.ImportExportController.importDataUpload
POST          /complete-import               controllers.ImportExportController.completeImport

GET           /user-agent-info               controllers.MainController.getUserAgentInfo

GET           /angular/template/*path        controllers.MainController.getAngularTemplate(path: String)

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                  controllers.Assets.at(path="/public", file)

# Static handler, for development. Should be handled by front-end web server
# in production.
GET           /static/*path                  controllers.MainController.static(path: String)
