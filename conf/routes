# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                              controllers.MainController.index

POST       /logged-in-user                controllers.SessionController.getLoggedInUser
POST       /login                         controllers.SessionController.login
POST       /logout                        controllers.SessionController.logout

POST       /search                        controllers.SearchController.searchPasswordEntries

GET        /angular/template/*path        controllers.MainController.getAngularTemplate(path: String)

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                  controllers.Assets.at(path="/public", file)

# Static handler, for development. Should be handled by front-end web server
# in production.
GET        /static/*path                  controllers.MainController.static(path: String)
